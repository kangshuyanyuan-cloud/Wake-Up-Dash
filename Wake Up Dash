    <script>
        // 設定定数
        const CORRECT_QR = "WAKE_UP_DASH_2026";
        const STORAGE_KEY = "wud_data_v1";

        // 状態管理
        let state = {
            targetTime: null, // "HH:MM"
            streak: 0,
            points: 0,
            lastScanDate: null,
            holidayMode: false
        };

        let clockInterval; // Timer Interval ID

        // ZXingリーダー
        const codeReader = new ZXing.BrowserQRCodeReader();

        // 初期化処理
        window.onload = () => {
            loadState();
            if (!state.targetTime) {
                switchView('setup-view');
            } else {
                switchView('dashboard-view');
                startClock();
            }
            updateUI();
        };

        function loadState() {
            const saved = localStorage.getItem(STORAGE_KEY);
            if (saved) state = JSON.parse(saved);
        }

        function saveState() {
            localStorage.setItem(STORAGE_KEY, JSON.stringify(state));
            updateUI();
        }

        function switchView(id) {
            ['setup-view', 'dashboard-view', 'scanner-view'].forEach(v => {
                document.getElementById(v).classList.add('hidden');
            });
            document.getElementById(id).classList.remove('hidden');
        }

        function saveSettings() {
            const input = document.getElementById('target-time-input').value;
            if (!input) return alert("時刻を設定してください");
            state.targetTime = input;
            saveState();
            switchView('dashboard-view');
            startClock();
        }

        function startClock() {
            // Clear existing interval to prevent duplicates
            if (clockInterval) clearInterval(clockInterval);

            document.getElementById('target-display').innerText = state.targetTime;

            clockInterval = setInterval(() => {
                const now = new Date();
                const [h, m] = state.targetTime.split(':');
                const target = new Date();
                target.setHours(h, m, 0, 0);

                // 現在時刻表示（時計機能）
                const diff = (now - target) / 1000; // 秒差分

                const timerBox = document.getElementById('main-timer');
                const label = document.getElementById('timer-label');

                // ターゲットタイム ～ 5分後 (300秒) の間はカウントダウン
                if (diff >= 0 && diff <= 300) {
                    // カウントダウン表示（残り時間）
                    const remaining = 300 - diff;
                    const mins = Math.floor(remaining / 60);
                    const secs = Math.floor(remaining % 60);
                    const timeStr = `${mins}:${secs.toString().padStart(2, '0')}`;

                    document.getElementById('main-timer').innerText = timeStr;

                    // 赤文字
                    timerBox.classList.add('text-red-400');
                    timerBox.classList.remove('text-white');
                    label.innerText = "残り時間";
                    label.classList.remove('hidden');
                } else {
                    // 通常時計表示
                    const timeStr = now.toLocaleTimeString('ja-JP', { hour12: false });
                    document.getElementById('main-timer').innerText = timeStr;

                    // 白文字
                    timerBox.classList.remove('text-red-400');
                    timerBox.classList.add('text-white');
                    label.classList.add('hidden');
                }
            }, 1000);

            // Periodically update UI to check for time restrictions
            setInterval(updateUI, 60000);
        }

        function updateUI() {
            document.getElementById('streak-disp').innerText = state.streak;
            document.getElementById('score-disp').innerText = state.points;

            const holBtn = document.getElementById('holiday-btn');

            // Time restriction check for Holiday Ticket (Target -1h to Target +30m)
            let isRestrictedTime = false;
            if (state.targetTime) {
                const now = new Date();
                const [h, m] = state.targetTime.split(':');
                const target = new Date();
                target.setHours(h, m, 0, 0);

                // Adjust target date if it's strictly about "this upcoming target" vs "today's target"
                // For simplicity, we compare with today's target time instance.

                const diffMinutes = (now - target) / (1000 * 60);

                // Restricted: -60 mins <= diff <= +30 mins
                if (diffMinutes >= -60 && diffMinutes <= 30) {
                    isRestrictedTime = true;
                }
            }

            if (state.points >= 300 && !isRestrictedTime) {
                holBtn.disabled = false;
                holBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                holBtn.innerText = "休日チケットを使う (300pt)";
            } else {
                holBtn.disabled = true;
                holBtn.classList.add('opacity-50', 'cursor-not-allowed');
                if (isRestrictedTime) {
                    holBtn.innerText = "判定時間前後は使用不可";
                } else if (state.points < 300) {
                    holBtn.innerText = "休日チケットを使う (300pt)";
                }
            }
        }

        // カメラ起動
        async function activateScanner() {
            switchView('scanner-view');
            try {
                const videoInputDevices = await codeReader.listVideoInputDevices();
                const selectedDeviceId = videoInputDevices[0].deviceId;

                await codeReader.decodeFromVideoDevice(selectedDeviceId, 'video-feed', (result, err) => {
                    if (result) {
                        if (result.text === CORRECT_QR) {
                            handleSuccess();
                            codeReader.reset();
                        } else {
                            console.log("Wrong QR:", result.text);
                        }
                    }
                });
            } catch (err) {
                console.error(err);
                alert("カメラの起動に失敗しました。権限を確認してください。");
                closeScanner();
            }
        }

        function closeScanner() {
            codeReader.reset();
            switchView('dashboard-view');
        }

        function handleSuccess() {
            const now = new Date();
            const todayStr = now.toLocaleDateString();

            if (state.lastScanDate === todayStr) {
                alert("本日のスキャンは完了しています！");
                closeScanner();
                return;
            }

            const [h, m] = state.targetTime.split(':');
            const target = new Date();
            target.setHours(h, m, 0, 0);

            const diffSeconds = (now - target) / 1000;

            let pts = 0;
            let msg = "";

            if (state.holidayMode) {
                pts = 0;
                msg = "休日チケット使用。Streakは維持されます。";
                state.holidayMode = false;
            } else {
                if (diffSeconds < 0) {
                    pts = 0;
                    msg = "失敗: 早すぎます (0pt)";
                } else if (diffSeconds <= 30) {
                    pts = 100;
                    msg = "ランクS: 神速の起床 (100pt)";
                } else if (diffSeconds <= 300) {
                    pts = 50;
                    msg = "ランクA: 起床成功 (50pt)";
                } else {
                    pts = 0;
                    msg = "失敗: 時間切れ (0pt)";
                }
            }

            state.points += pts;

            // Streak handling logic fix
            if (pts > 0 || state.holidayMode) {
                // Success or Holiday
                if (state.streak === -1) state.streak = 1; // Recover from fail state if logic allows, or just set to 1? 
                // Actually logic says: if fail -> streak=0. So here we just increment.
                state.streak += 1;
            } else {
                // Fail
                state.streak = 0;
            }

            state.lastScanDate = todayStr;
            saveState();

            // Show Custom Modal
            showScanResult(pts, msg);
            closeScanner();
        }

        function showScanResult(pts, msg) {
            const modal = document.getElementById('scan-result-modal');
            const title = document.getElementById('scan-title');
            const ptsDisp = document.getElementById('scan-pts');
            const msgDisp = document.getElementById('scan-msg');

            if (pts > 0) {
                title.innerText = "SUCCESS";
                title.className = "text-2xl font-bold mb-2 text-center text-teal-400 tracking-wide";
                ptsDisp.innerText = `+${pts} PT`;
                ptsDisp.className = "text-5xl font-black text-center text-white mb-6 drop-shadow-[0_0_15px_rgba(255,255,255,0.5)]";
            } else {
                title.innerText = "FAILED";
                title.className = "text-2xl font-bold mb-2 text-center text-red-500 tracking-wide";
                ptsDisp.innerText = "+0 PT";
                ptsDisp.className = "text-5xl font-black text-center text-slate-500 mb-6";
            }

            // Simple message parsing for display
            // msg format: "Rank S: Title (100pt)"
            // We want just the Title part ideally, or just show the whole msg
            msgDisp.innerText = msg.split('(')[0]; // Remove points from msg if redundant

            modal.classList.remove('hidden');
        }

        function closeScanResult() {
            document.getElementById('scan-result-modal').classList.add('hidden');
            location.reload(); // Reload to refresh UI and state
        }

        function buyHoliday() {
            if (state.points >= 300) {
                if (confirm("300pt消費して「明日休み」チケットを使いますか？")) {
                    state.points -= 300;
                    state.holidayMode = true;
                    saveState();
                    alert("休日モードを適用しました。次のスキャンは判定免除されます。");
                }
            }
        }

        // Settings Logic
        function openSettings() {
            document.getElementById('settings-modal').classList.remove('hidden');
        }

        function closeSettings() {
            document.getElementById('settings-modal').classList.add('hidden');
        }

        function changeTime() {
            // Show custom confirm modal
            document.getElementById('confirm-modal').classList.remove('hidden');
            closeSettings();
        }

        function closeConfirm() {
            document.getElementById('confirm-modal').classList.add('hidden');
        }

        // Help Modal Logic
        function openHelp() {
            document.getElementById('help-modal').classList.remove('hidden');
        }

        function closeHelp() {
            document.getElementById('help-modal').classList.add('hidden');
        }

        function executeChangeTime() {
            state.targetTime = null;
            state.streak = 0; // Reset streak
            saveState();
            location.reload();
        }

        function resetData() {
            // Show custom confirm modal
            document.getElementById('reset-confirm-modal').classList.remove('hidden');
            closeSettings();
        }

        function closeResetConfirm() {
            document.getElementById('reset-confirm-modal').classList.add('hidden');
        }

        function executeResetData() {
            localStorage.removeItem(STORAGE_KEY);
            location.reload();
        }

        function downloadQRCode() {
            // Generate QR Code
            const qr = new QRious({
                value: CORRECT_QR,
                size: 500,
                level: 'H'
            });

            // Create download link
            const link = document.createElement('a');
            link.href = qr.toDataURL();
            link.download = 'wake_up_dash_qr.png';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    </script>
</body>

</html>
